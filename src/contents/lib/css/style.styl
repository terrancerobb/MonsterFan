@import url("http://fonts.googleapis.com/css?family=Open+Sans:300italic,700italic,400,300|Cinzel+Decorative:700");

body {
	background-image: url("../images/n.png");
	font-family: 'Open Sans', sans-serif;
	margin: 0;
}
.centered{
	text-align: center;
}
.green{
	background-color: #789319;
	border-bottom: dotted 20px rgba(255, 255, 255, 0.2);
}
.grey{
	background-color: #bbb;
	border-top: solid 1px #AAA;
	border-bottom: dotted 20px rgba(0, 0, 0, 0.4);
}
div.grey.last{
	border-bottom: none;
}
nav.menu{
	background-color: #fff;
	width: 100%;
	text-align: center;
}
nav.menu ul{
	list-style: none;
}
nav.menu ul li{
	display: inline-block;
}
nav.menu a{
	color: #777;
	font-size: 1.4em;
	font-weight: 400;
	text-decoration: none;
}
nav.menu li:after{
	content: "â€”";
	margin: 0 10px;
}
nav.menu li:last-child::after{
	content:"";
	margin: 0;
}
div.heading{
	background: #fff;
	color: #333;

	margin: 0;
	padding:20px 0;
	position: relative;
	text-align: center;
}
div.heading h2{
	font-weight: 300;
	font-size: 5em;
	margin: 15px;
}
div.heading h2 strong{
	color: #F26B11;
}
.branded{
	font-family: 'Cinzel Decorative', serif;
	font-weight: 700;
	font-style: normal !important;
}
div.subheading{
	background-image: url("../images/n.png");
	margin: 0;
	position: relative;
	width: 100%;
}
.green div.subheading{
	background-color: rgba(0,0,0,0.3);
	border-bottom: solid 1px #82a01b;
}
.grey div.subheading{
	background-color: rgba(0,0,0,0.2);
	border-bottom: solid 1px #ddd;
}
div.subcontainer{
	width: 80%;
	margin: 0 auto;
	padding: 3em 1em 1em;
}
div.subcontainer.first{
	padding: 1em;
}
div.subheading h3{
	color: #fff;
	font-family: 'Open Sans', sans-serif;
	font-size: 4em;
	font-weight: 300;
	margin: 0;
}
.grey div.subheading h3{
	color: #222;
}
.arrow-down {
	border-left: 75px solid transparent;
	border-right: 75px solid transparent;
	border-top: 75px solid #fff;
	height: 0;
	left: 50%;
	margin: 0 auto; 
	margin-left:-75px;
	position: absolute;
	width: 0; 
}
section{
	background-image: url(../images/s.png);
}
section h4{
	font-style: italic;
	font-weight: 300;
	font-size: 3em;
	margin: 0;
}
.green section{
	color: #ddf390;
}
.grey section{
	color: #333;
	text-shadow: 1px 1px 0 #ccc;
}
section p{
	font-size: 1.2em;
}
.grey section p{
	text-shadow: 1px 1px 0 #ccc;
	margin: 5px auto;
}
section strong{
	font-weight: 700;
	font-style: italic;
}
section ul{
	overflow: hidden;
	width: 100%;
	text-align: center;
	list-style: none;
	margin: 50px 0;
}
section li{
	background-color: rgba(255,255,255,0.1);
	display: inline block;
	float: left;
	margin: 2%;
	position: relative;
	text-align: left;
	width: 28%;
}
section li:before {
   content:"";
   position:absolute;
   top:0;
   right:0;
   border-width:0 16px 16px 0;
   border-style:solid;
   border-color:#8f8f8f #bbb;
}
section li h3{
	background-color: rgba(0,0,0,0.1);
	margin: 0 0 5px;
	padding: 5px;
	box-sizing: border-box;
	text-align: center;
}
section li p{
	margin: 12px;
}

#footer{
	background-image: url(../images/s.png);
	box-shadow: inset 0 0 40px 15px #111;
	width: 100%;
	background-color: #222;
	margin: 0;
	padding 15px 0;
	text-align: right;
}
#footer small{
	margin-right: 50px;
	color: #aaa;
}

.sticky ul{
	margin: 0;
	padding: 0;
}
.sticky ul li a{
	margin: 4px;
}
nav.menu  li.logo{
	display: none;
	margin-right: 7%;
}
nav.menu li.logo.stuckTitle{
	display: inline-block;
}
nav.menu li.logo a{
	font-size: 1.5em;
}
nav.menu li.stuckTitle strong.branded{
	color: #F26B11;
}
nav.menu li.stuckTitle:after{
	content:"";
}
nav.menu.sticky{
	background-color: rgba(255, 255, 255, 0.95);
	box-shadow: 0 1px 10px rgba(0, 0, 0, 0.5);
	position: fixed;
	top: 0;
	z-index: 10000;
}
